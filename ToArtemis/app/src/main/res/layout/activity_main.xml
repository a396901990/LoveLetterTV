<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/root_fragment_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        android:background="@android:color/black"
        app:indicator_width="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.dean.toartemis.view.bluesnow.FlowerView
        android:id="@+id/flowerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.dean.toartemis.view.whitesnow.SnowView
        android:id="@+id/whiteSnowView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>

    <com.dean.toartemis.view.heart.HeartLayout
        android:id="@+id/heart_o_red_layout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="38dp"
        android:background="@android:color/transparent"
        android:visibility="gone"/>

    <com.dean.toartemis.view.typewriter.TypeTextView
        android:id="@+id/typeTextView"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:background="#7f000000"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_marginRight="55dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#FFF"/>

    <ImageView
        android:id="@+id/imageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:src="@mipmap/malin"
        android:visibility="gone"
        />
</FrameLayout>